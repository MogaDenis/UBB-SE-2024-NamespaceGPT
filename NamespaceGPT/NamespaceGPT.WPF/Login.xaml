<Window x:Class="NamespaceGPT.WPF.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NamespaceGPT.WPF"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <!-- Login controls here -->
        <Border CornerRadius="6" BorderBrush="Gray" Background="LightGray" BorderThickness="2" DockPanel.Dock="Top" Width="200" Height="180">
        <StackPanel Width="200" VerticalAlignment="Center">
            <Label>Username</Label>
            <TextBox x:Name="UsernameTextBox" Margin="10"/>
            <Label>Password</Label>
            <PasswordBox x:Name="PasswordTextBox" Margin="10"/>
            <Button Content="Login" Click="LoginButton_Click" Margin="10"/>
                <Label x:Name="LogInLabel" HorizontalAlignment="Center">Not logged in</Label>
        </StackPanel>
        </Border>
        </Grid>
</Window>
