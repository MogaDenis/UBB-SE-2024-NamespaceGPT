<UserControl x:Class="NamespaceGPT.WPF.ProductReviewsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NamespaceGPT.WPF"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#0b184b">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <TextBlock Foreground="White" FontSize="24" Text="Customer Reviews:" Margin="10" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Foreground="White" FontSize="24" Text="{Binding Product.Name}" Margin="10" HorizontalAlignment="Right" />
                    <Image Source="{Binding Product.ImageURL}" Width="200" Height="200" Stretch="Uniform" Margin="0,0,10,0" HorizontalAlignment="Right" />
                </StackPanel>
                <ListBox Background="Transparent" BorderThickness="0" ItemsSource="{Binding Reviews}">

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#262a46" Margin="5" Padding="5">
                                <StackPanel Orientation="Vertical">

                                    <TextBlock Foreground="White" FontSize="30" VerticalAlignment="Center" Text="{Binding Username}" Margin="5" />
                                    <TextBlock Foreground="White" FontSize="18" HorizontalAlignment="Left" Text="{Binding Title}" Margin="5" Padding="100,0,0,0" />
                                    <TextBlock Foreground="White" FontSize="12" HorizontalAlignment="Center" Text="{Binding Description}" Margin="5" />

                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
